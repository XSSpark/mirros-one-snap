#!/bin/sh -e
DUMP_FILE="${SNAP_DATA}/backup_mirrOS_api_production.sql"

"$SNAP/usr/bin/mysqldump" \
    --defaults-file="$SNAP_COMMON/mysql/conf/my.cnf" \
    -pglancr \
    --add-locks \
    --add-drop-database \
    --single-transaction \
    mirrOS_api_production >"${DUMP_FILE}"

if test -e "${DUMP_FILE}"; then
    echo "${DUMP_FILE}"
else
    exit 1
fi
